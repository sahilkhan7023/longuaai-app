# Server Configuration
NODE_ENV=production
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/ai-language-learning

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.com

# OpenAI API
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENAI_API_BASE=https://api.openai.com/v1

# Stripe Configuration (REPLACE WITH REAL KEYS IN PRODUCTION!)
STRIPE_SECRET_KEY=sk_live_your_live_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret

# Stripe Price IDs (create these in your Stripe dashboard)
STRIPE_PREMIUM_MONTHLY_PRICE_ID=price_premium_monthly_live
STRIPE_PREMIUM_YEARLY_PRICE_ID=price_premium_yearly_live
STRIPE_PRO_MONTHLY_PRICE_ID=price_pro_monthly_live
STRIPE_PRO_YEARLY_PRICE_ID=price_pro_yearly_live

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your-app-password-here

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Redis (optional - for caching and sessions)
REDIS_URL=redis://localhost:6379

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

